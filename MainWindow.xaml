<Window x:Class="TaskTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:TaskTrackerApp"
        xmlns:local1="clr-namespace:TaskTrackerApp.Converters"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Tracker"
        Height="650"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f0f2f5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Converter for Priority colors -->
        <local1:PriorityToColorConverter x:Key="PriorityToColorConverter"/>

        <!-- Fade-in animation style for ListBox items -->
        <Style TargetType="ListBoxItem" x:Key="TaskItemStyle">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1" Duration="0:0:0.3"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                             From="0.95" To="1" Duration="0:0:0.3"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                             From="0.95" To="1" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Add Task -->
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- Task List -->
            <RowDefinition Height="Auto"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                CornerRadius="10"
                Background="#3367d6"
                Padding="15"
                Margin="0,0,0,15">
            <TextBlock Text="Task Tracker"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="30"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Add Task Section -->
        <Border Grid.Row="1"
        Background="White"
        CornerRadius="10"
        Padding="15"
        Margin="0,0,0,15"
        Effect="{DynamicResource DropShadow}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Task Description TextBox -->
                <TextBox x:Name="TaskDescriptionBox"
                 Width="350"
                 Height="40"
                 FontSize="14"
                 Padding="10"
                 VerticalContentAlignment="Center"
                 BorderBrush="#cccccc"
                 BorderThickness="1"
                 Background="#fafafa"
                 ToolTip="Enter task description"/>

                <!-- Priority ComboBox -->
                <Border Background="#fafafa" BorderBrush="#cccccc" BorderThickness="1" CornerRadius="5">
                    <ComboBox x:Name="PriorityBox"
                      Width="100"
                      Height="40"
                      FontSize="14"
                      SelectedIndex="1"
                      Background="Transparent"
                      BorderThickness="0"
                      Padding="5">
                        <ComboBoxItem Content="High"/>
                        <ComboBoxItem Content="Medium"/>
                        <ComboBoxItem Content="Low"/>
                    </ComboBox>
                </Border>

                <!-- Due DatePicker -->
                <Border Background="#fafafa" BorderBrush="#cccccc" BorderThickness="1" CornerRadius="5">
                    <Grid Width="140" Height="40">
                        <DatePicker x:Name="DueDatePicker"
                            FontSize="14"
                            Background="Transparent"
                            BorderThickness="0"/>
                    </Grid>
                </Border>

                <!-- Add Task Button -->
                <Button Width="140"
                Height="40"
                FontSize="14"
                FontWeight="SemiBold"
                Background="#4f8ef7"
                Foreground="White"
                BorderBrush="#4f8ef7"
                BorderThickness="1"
                Cursor="Hand"
                Click="AddTask_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" Margin="0,0,5,0" />
                        <TextBlock Text="Add Task"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Border>

        <!-- Filter Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button Width="100" Height="35" Background="#dee3eb" BorderBrush="#c4c9d1" Cursor="Hand" Click="ShowAll_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="&#xE8EF;" FontFamily="Segoe MDL2 Assets" Margin="0,0,5,0"/>
                    <TextBlock Text="All"/>
                </StackPanel>
            </Button>

            <Button Width="100" Height="35" Background="#dee3eb" BorderBrush="#c4c9d1" Cursor="Hand" Click="ShowPending_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" Margin="0,0,5,0"/>
                    <TextBlock Text="Pending"/>
                </StackPanel>
            </Button>

            <Button Width="100" Height="35" Background="#dee3eb" BorderBrush="#c4c9d1" Cursor="Hand" Click="ShowCompleted_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="&#xE001;" FontFamily="Segoe MDL2 Assets" Margin="0,0,5,0"/>
                    <TextBlock Text="Completed"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Task List -->
        <Border Grid.Row="3"
        Background="White"
        CornerRadius="10"
        Padding="10"
        Effect="{DynamicResource DropShadow}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Search Box -->
                    <RowDefinition Height="*"/>
                    <!-- ListBox fills remaining space -->
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <TextBox x:Name="SearchBox"
                 Grid.Row="0"
                 Width="300"
                 Height="30"
                 Margin="0,0,0,10"
                 TextChanged="SearchBox_TextChanged"/>

                <!-- ListBox -->
                <ListBox x:Name="TaskList"
                 Grid.Row="1"
                 ItemContainerStyle="{StaticResource TaskItemStyle}"
                 FontSize="15"
                 BorderThickness="0"
                 Background="White"
                 MouseDoubleClick="TaskList_MouseDoubleClick">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#e4e7eb" BorderThickness="0 0 0 1"
                            Padding="8"
                            Background="{Binding IsCompleted, Converter={StaticResource BoolToColorConverter}}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#f0f8ff"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Update Task" Click="UpdateTask_Click" CommandParameter="{Binding}" />
                                        <MenuItem Header="Delete Task" Click="DeleteTask_Click" CommandParameter="{Binding}" />
                                    </ContextMenu>
                                </Border.ContextMenu>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Completed Checkbox -->
                                    <CheckBox IsChecked="{Binding IsCompleted}" 
                                      Margin="5,0,10,0" 
                                      Checked="TaskStatusChanged" 
                                      Unchecked="TaskStatusChanged"/>

                                    <!-- Task Description -->
                                    <TextBlock Grid.Column="1" Text="{Binding Description}" 
                                       TextDecorations="{Binding IsCompleted, Converter={StaticResource BoolToTextDecorationConverter}}"
                                       VerticalAlignment="Center"/>

                                    <!-- Priority -->
                                    <Border Grid.Column="2" 
                                    Background="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}" 
                                    CornerRadius="5" Padding="5" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Priority}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- Due Date -->
                                    <TextBlock Grid.Column="3" Text="{Binding DueDate, StringFormat='Due: {0:MM/dd/yyyy}'}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="#555"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <StatusBar Grid.Row="4"
           Background="#f0f2f5"
           Height="40"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Center"
           Padding="5">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <!-- Completed -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="&#xE001;" FontFamily="Segoe MDL2 Assets" Foreground="Green" Margin="0,0,5,0"/>
                    <TextBlock x:Name="CompletedCountText" FontSize="13" Foreground="#333"/>
                </StackPanel>

                <!-- Pending -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" Foreground="Orange" Margin="0,0,5,0"/>
                    <TextBlock x:Name="PendingCountText" FontSize="13" Foreground="#333"/>
                </StackPanel>

                <!-- Total -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="&#xE8EF;" FontFamily="Segoe MDL2 Assets" Foreground="Blue" Margin="0,0,5,0"/>
                    <TextBlock x:Name="TotalCountText" FontSize="13" Foreground="#333"/>
                </StackPanel>

            </StackPanel>
        </StatusBar>
    </Grid>
</Window>
